<!-- <%= render 'shared/page_title', title: 'Log in' %>-->
<section>


<div class="row">
  <h2>Sign in</h2>
</div>
<div class="row">
  <%= form_tag '/login', :html => {class: "form"}  do %>
  <div class="row">
    <div class="col span-1-of-4">
      <%= label_tag :Email %>
      </div>
      <div class="col span-2-of-4">
        <%= email_field_tag :email,nil, :placeholder => "Your Email", required: true %>
      </div>
    </div>
    <div class="row">
      <div class="col span-1-of-4">
      <%= label_tag :Password %>
    </div>
    <div class="col span-2-of-4">
      <%= password_field_tag :password,nil, :placeholder => "Your Password", required: true  %>
    </div>
  </div>
  <div class="row">
    <div class="col span-1-of-4">
      <label>&nbsp;</label>
    </div>
    <div class="col span-2-of-4">
      <%= submit_tag 'Login', class:'btn btn-success' %>
      <%= link_to "Cancel", root_path, class: "btn ghost-btn" %>
  </div>
</div>
<% end %>
</div>
</section>

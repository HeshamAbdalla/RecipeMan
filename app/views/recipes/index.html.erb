<h1>All The Recipes</h1>
<hr/>
<% @recipes.each do |r| %>
<div class="row">

  <div class="col-md-2">
    <section class="ch  ef_info center">
      <%= gravatar_for r.user, size: 100 %>
      <h5>Chef name: <%= r.user.chefname %> </h5>
    </section>
  </div>

  <div class="col-lg-8 well">
    <h2><%= link_to r.name, "" %></h2>
    <h3><%= r.summary %></h3>
    <p>
      <span class='quiet'><small> <%= time_ago_in_words(r.created_at)%> ago</small></span>
    </p>
    <h4><%= r.description %></h4>
  </div>
</div>
<% end %>
